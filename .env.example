# =============================================================================
# ENVIRONMENT VARIABLES TEMPLATE - DEVELOPMENT
# =============================================================================
# Copy this file to .env and configure with your actual values
# Never commit the actual .env file to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Neon PostgreSQL connection string with pooling enabled
# Required: Yes
# Where to obtain: https://console.neon.tech/ → Select project → Connection Details → Copy connection string
# Example: postgresql://username:password@ep-xxx.us-east-2.aws.neon.tech/dbname?sslmode=require&pool=true
DATABASE_URL=

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# Server secret for Vybe integrations
# Required: Yes
# How to generate: openssl rand -base64 32
# Note: Use a strong, unique random string for production
VYBE_SERVER_SECRET=

# =============================================================================
# INNGEST CONFIGURATION
# =============================================================================

# Inngest application identifier
# Required: Yes
# Where to obtain: https://app.inngest.com/ → Your app → Settings → App ID
INNGEST_APP_ID=

# Inngest event key for sending events
# Required: Yes
# Development value: "local" (for local development)
# Production: Obtain from Inngest dashboard → Event keys → Create new key
INNGEST_EVENT_KEY=local

# Inngest signing key for webhook verification (production only)
# Required: Production environments
# Where to obtain: Inngest dashboard → Signing keys → Copy production signing key
# INNGEST_SIGNING_KEY=

# =============================================================================
# AI INTEGRATION
# =============================================================================

# Ollama API endpoint URL
# Required: No
# Default: http://localhost:11434
# Note: Use http://localhost:11434 for local development, http://your-vps-ip:11434 for VPS deployment
OLLAMA_BASE_URL=http://localhost:11434

# OpenAI API key for fallback/dual AI support
# Required: No
# Where to obtain: https://platform.openai.com/api-keys → Create new secret key
# OPENAI_API_KEY=

# =============================================================================
# MONITORING & ERROR TRACKING
# =============================================================================

# Sentry Data Source Name for error tracking
# Required: No (but recommended for production)
# Where to obtain: Sentry project → Settings → Client Keys (DSN)
# SENTRY_DSN=

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment mode
# Required: Yes
# Values: development, production
NODE_ENV=development

# Application display name shown in UI
# Required: No
# Default: AgentsFlowAI
NEXT_PUBLIC_APP_NAME=AgentsFlowAI

# Vybe integrations domain URL
# Required: No
# Default: https://vybe.build
NEXT_PUBLIC_VYBE_INTEGRATIONS_DOMAIN=https://vybe.build

# Toggle between live data and fake data in development
# Required: No
# Values: true (use live data), false (use fake data)
# Default: false
NEXT_PUBLIC_SHOW_LIVE_DATA=false

# =============================================================================
# DEVELOPMENT MODE ONLY
# =============================================================================
# WARNING: These variables should NEVER be set in production environments
# They bypass authentication for development convenience

# Development user name for bypassing authentication
# Required: No (development only)
NEXT_PUBLIC_DEV_USER_NAME=Dev User

# Development user email for bypassing authentication  
# Required: No (development only)
NEXT_PUBLIC_DEV_USER_EMAIL=dev@example.com

# Development user avatar URL
# Required: No (development only)
NEXT_PUBLIC_DEV_USER_IMAGE=https://api.dicebear.com/7.x/avataaars/svg?seed=dev

# =============================================================================
# ADDITIONAL NOTES
# =============================================================================
# 1. All variables prefixed with NEXT_PUBLIC_ are exposed to the browser
# 2. Server-only variables (no NEXT_PUBLIC_ prefix) are only available on the server
# 3. For production deployment, use .env.production.example as your template
# 4. Always use strong, unique secrets for production environments
# 5. Consider using a secret management service for production deployments
